<%- include("../partials/header") %>


	<div class="row">
		<h1 style="text-align: center;">Create a new Campground!</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST" enctype="multipart/form-data">
				<div class = "form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="Add camp name" maxlength="40">
				</div>
				<div class = "form-group">
					<input class="form-control" type="number" name="campground[price]" placeholder="Add camp price" min="0.00" max="99999999" step="0.01">
				</div>
				<div class = "form-group">
					<label for="image">Add Image</label>
					<input class="form-control" type="file" name="image" id="image" accept="image/*" required>
				</div>
				<div class = "form-group">
					<textarea class="form-control" type="text" name="campground[description]" placeholder="Add a description (700 characters)" maxlength="700" rows="3"></textarea>
				</div>
				<div class = "form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
	</div>



<%- include("../partials/footer") %>