<%- include("../partials/header") %>

	<header class="jumbotron"> 
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View all our beautiful campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
			</p>
			<p>
				<form action="/campgrounds" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Search campgrounds..." class="form-control">
						<input type="submit" value="Search" class="btn btn-default">
					</div>
				</form>
			</p>
		</div>
	</header>
	
	<% if(noMatch){ %>
	<h3><emph><%= noMatch %></emph></h3>
	<% } else{ %>

	<div class="row">
		<div class = "col-lg-12">
			<h3>Our most popular campgrounds!</h3>
		</div>
	</div>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campground.forEach(function(campgroundito){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campgroundito.image %>">
					<div class="caption">
						<h4><%= campgroundito.name %></h4>
						<% if (campgroundito.rating === 0) { %>
						<em>No reviews yet.</em>
						<% } else { %>
							<span class="fa fa-star checked"></span>
							<span class="fa fa-star <% if (campgroundito.rating > 1.5) { %> checked <% } %>"></span>
							<span class="fa fa-star <% if (campgroundito.rating > 2.5) { %> checked <% } %>"></span>
							<span class="fa fa-star <% if (campgroundito.rating > 3.5) { %> checked <% } %>"></span>
							<span class="fa fa-star <% if (campgroundito.rating > 4.5) { %> checked <% } %>"></span>
						<% } %>
					</div>
					<p>
						<a href="/campgrounds/<%= campgroundito._id %>" class="btn btn-primary">More info</a>
					</p>
				</div>	
			</div>
		<% }); %>
	</div>
	<% } %>
<%- include("../partials/footer") %>